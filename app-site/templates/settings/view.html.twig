{% extends 'base.html.twig' %}

{% block body %}
    {{ component('navigation', {index: 2}) }}
    <div class="content">
        <form>
            <h2>Sync server time</h2>
            <div class="form-control" id="serverTimeContainer">
                <label>You device time</label>
                <input type="datetime-local" id="clientTime" readonly />
            </div>
            <div class="form-control" id="serverTimeContainer">
                <label for="serverTime">Sentinel's time</label>
                <input type="datetime-local" name="server-time" id="serverTime" value="{{ serverTime }}" required autofocus />
            </div>
            <button class="btn-primary w100" type="submit">
                <i class="fa-solid fa-sync"></i> Update Sentinel's time
            </button>
        </form>

        <form>
            <h2>Activation time</h2>
            <h3>Monday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="monBeginTime">From</label>
                    <input type="time" id="monBeginTime" />
                </div>
                <div class="form-control">
                    <label for="monEndTime">To</label>
                    <input type="time" id="monEndTime" />
                </div>
            </div>
            <h3>Tuesday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="tueBeginTime">From</label>
                    <input type="time" id="tueBeginTime" />
                </div>
                <div class="form-control">
                    <label for="tueEndTime">To</label>
                    <input type="time" id="tueEndTime" />
                </div>
            </div>
            <h3>Wednesday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="wedBeginTime">From</label>
                    <input type="time" id="wedBeginTime" />
                </div>
                <div class="form-control">
                    <label for="wedEndTime">To</label>
                    <input type="time" id="wedEndTime" />
                </div>
            </div>
            <h3>Thursday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="thuBeginTime">From</label>
                    <input type="time" id="thuBeginTime" />
                </div>
                <div class="form-control">
                    <label for="thuEndTime">To</label>
                    <input type="time" id="thuEndTime" />
                </div>
            </div>
            <h3>Friday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="friBeginTime">From</label>
                    <input type="time" id="friBeginTime" />
                </div>
                <div class="form-control">
                    <label for="friEndTime">To</label>
                    <input type="time" id="friEndTime" />
                </div>
            </div>
            <h3>Saturday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="satBeginTime">From</label>
                    <input type="time" id="satBeginTime" />
                </div>
                <div class="form-control">
                    <label for="satEndTime">To</label>
                    <input type="time" id="satEndTime" />
                </div>
            </div>
            <h3>Sunday</h3>
            <div class="row w100">
                <div class="form-control">
                    <label for="sunBeginTime">From</label>
                    <input type="time" id="sunBeginTime" />
                </div>
                <div class="form-control">
                    <label for="sunEndTime">To</label>
                    <input type="time" id="sunEndTime" />
                </div>
            </div>

            <button class="btn-primary w100" type="submit">
                <i class="fa-solid fa-sync"></i> Update activation time
            </button>
        </form>

        <script>
            // Met à jour l'affichage de l'heure locale du navigateur
            function updateClientTime() {
                document.getElementById('clientTime').value = getNowStandardDate();
            }

            function getNowStandardDate() {
                const datetime = new Date();
                let d = datetime.getDate();
                let m = datetime.getMonth() + 1; //Month from 0 to 11
                let y = datetime.getFullYear();
                let h = datetime.getHours();
                let min = datetime.getMinutes();

                const formattedDate = `${y}-${m<=9 ? '0' + m : m}-${d <= 9 ? '0' + d : d}`;
                const formattedTime = `${h<=9 ? '0' + h : h}:${min<=9 ? '0' + min : min}`;

                return formattedDate + " " + formattedTime;
            }


            // On exécute au chargement, puis on met à jour toutes les secondes
            window.addEventListener('load', () => {
                updateClientTime();
            });
        </script>
    </div>
{% endblock %}

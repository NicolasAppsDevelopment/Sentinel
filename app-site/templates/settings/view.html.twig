            <div class="form-control">
                <label for="accessPointName">Name</label>
                <input type="text" name="{{ field_name(accessPointForm.accessPointName) }}" value="{{ field_value(accessPointForm.accessPointName) }}" id="accessPointName" autocomplete="accessPointName">

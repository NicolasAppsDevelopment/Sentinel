                    <label for="wednesdayFrom">From</label>
                    <input type="time" id="wednesdayFrom" value="{{ activationPlanning.wednesdayFrom ?? "" }}" />
                </div>
                <div class="form-control w100">
                    <label for="wednesdayTo">To</label>
                    <input type="time" id="wednesdayTo" value="{{ activationPlanning.wednesdayTo ?? "" }}" />
                </div>
            </div>

{% extends 'base.html.twig' %}

{% block body %}
    {{ component('navigation', {index: 2}) }}
    <div class="content">
        <form>
            <h2>Sync server time</h2>
            <div class="form-control" id="serverTimeContainer">
                <label>You device time</label>
                <input type="datetime-local" id="clientTime" readonly />
            </div>
            <div class="form-control" id="serverTimeContainer">
                <label for="serverTime">Sentinel's time</label>
                <input type="datetime-local" name="server-time" id="serverTime" value="{{ serverTime }}" required autofocus />
            </div>
            <button class="btn-primary w100" type="submit">
                <i class="fa-solid fa-sync"></i> Update Sentinel's time
            </button>
        </form>

        <form action="{{ path('settings_activation_time_update') }}" method="post">
            <h2>Activation time</h2>
            <h3>Monday</h3>
            <div class="row w100">

{% extends 'base.html.twig' %}

{% block body %}
    {{ component('navbar', {index: 3}) }}
    {{ component('alert') }}

    <h1 class='text-center'>Account</h1>

    <div class="container centered row_space_evenly">
        <div class="container-card small">
            <h2>Informations</h2>
            <table class="profile">
                <tbody>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Score</th>
                        <td>{{ user.score }}</td>
                    </tr>
                    <tr>
                        <th>Date of Creation</th>
                        <td>{{ user.creationDate|date("d/m/Y") }}</td>
                    </tr>
                </tbody>
            </table>

            {% if app.user.id == user.id %}
            <div class="row_space_evenly">
                <a class="rounded-btn"  href="{{ path('app_account_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen-to-square"></i>  Edit</a>

                {{ include('account/_delete_form.html.twig') }}
            </div>
            {% endif %}
        </div>

        <div class="container-card small">
            <h2>Statistics</h2>
            <table class="profile">
                <tbody>
                    <tr>
                        <th>Number of quizzes played</th>
                        <td>{{ NbQuizzesPlayed }}</td>
                    </tr>
                    <tr>
                        <th>Number of questions answered</th>
                        <td>{{ NbQuestionsAnswered }}</td>
                    </tr>
                    <tr>
                        <th>Percentage of correct answers</th>
                        <td>{{ PercentageOfCorrectAnswers }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
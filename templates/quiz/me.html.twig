        {{ form_end(searchForm) }}
        <a href="{{ path('app_quiz_add') }}" class="rounded-btn"><i class="fa-solid fa-plus"></i> Create a quiz</a>
    </div>

    <div class="p1">
        {% if searchedQuiz is not null %}

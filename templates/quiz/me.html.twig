                    {{ component('quizcard', {quiz: quiz}) }}
                {% endfor %}
                {% if searchedQuiz is empty %}
                    <p class="no-result">No quiz found ðŸ˜…</p>
                {% endif %}
            </div>
            <hr>
        {% endif %}

        <h2>âœ¨ Your Quizzes</h2>

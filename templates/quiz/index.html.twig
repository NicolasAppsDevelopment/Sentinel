{% extends 'base.html.twig' %}

{% block title %}Liste des quiz{% endblock %}

{% block body %}
    {{ component('Navbar', {index: 0}) }}

    <h1>Liste des quiz</h1>

    <div class="search-form">
        {{ form(searchForm) }}
        <a href="{{ path('app_quiz_add') }}" class="rounded-btn">Cr√©er un quiz</a>
    </div>

    <h2>R√©sultat de recherche</h2>
    <div class="container">
        {% for quiz in searchedQuiz %}
            <div>
                <h3>{{ quiz.title }}</h3>
                <p>Par {{ quiz.author.username }} - {{ quiz.questions.count() }} questions</p>
                <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                <p>{{ quiz.description }}</p>
                <a href="{{ path('app_quiz_view', {'id': quiz.id}) }}" class="rounded-btn">Jouer</a>
            </div>
        {% endfor %}
    </div>

    <h2>üî• Les quiz en tendance</h2>
    <div class="container">
        {% for quiz in trendQuiz %}
            <div>
                <h3>{{ quiz.title }}</h3>
                <p>Par {{ quiz.author.username }} - {{ quiz.questions.count() }} questions</p>
                <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                <p>{{ quiz.description }}</p>
                <a href="{{ path('app_quiz_view', {'id': quiz.id}) }}" class="rounded-btn">Jouer</a>
            </div>
        {% endfor %}
    </div>

    <h2>‚ú® Les derniers quiz</h2>
    <div class="container">
        {% for quiz in lastQuiz %}
            <div>
                <h3>{{ quiz.title }}</h3>
                <p>Par {{ quiz.author.username }} - {{ quiz.questions.count() }} questions</p>
                <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                <p>{{ quiz.description }}</p>
                <a href="{{ path('app_quiz_view', {'id': quiz.id}) }}" class="rounded-btn">Jouer</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}

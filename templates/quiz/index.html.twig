{% extends 'base.html.twig' %}

{% block title %}Liste des quiz{% endblock %}

{% block body %}
    {{ component('navbar', {index: 0}) }}

    <h1>Liste des quiz</h1>

    <div class="search-form">
        {{ form(searchForm) }}
        <a href="{{ path('app_quiz_add') }}" class="rounded-btn"><i class="fa-solid fa-plus"></i> Cr√©er un quiz</a>
    </div>

    <h2>R√©sultat de recherche</h2>
    <div class="container">
        {% for quiz in searchedQuiz %}
            <a class="quiz-card" href="{{ path('app_quiz_view', {'id': quiz.id}) }}">
                <h3>{{ quiz.title }}</h3>
                <a href="{{ path('app_account_view', {'id': quiz.author.id}) }}">{{ quiz.author.username }}</a>
                <p>{{ quiz.questions.count() }} questions</p>
                <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                <p>{{ quiz.description }}</p>
            </a>
        {% endfor %}
    </div>

    <h2>üî• Les quiz en tendance</h2>
    <div class="container">
        {% for quiz in trendQuiz %}
            <a class="quiz-card" href="{{ path('app_quiz_view', {'id': quiz.id}) }}">
                <div>
                    <h3>{{ quiz.title }}</h3>
                    <a href="{{ path('app_account_view', {'id': quiz.author.id}) }}">{{ quiz.author.username }}</a>
                    <p>{{ quiz.questions.count() }} questions</p>
                    <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                    <p>{{ quiz.description }}</p>
                </div>
            </a>
        {% endfor %}
    </div>

    <h2>‚ú® Les derniers quiz</h2>
    <div class="container">
        {% for quiz in lastQuiz %}
            <div class="quiz-card">
                <h3>{{ quiz.title }}</h3>
                <a href="{{ path('app_account_view', {'id': quiz.author.id}) }}">{{ quiz.author.username }}</a>
                <p>{{ quiz.questions.count() }} questions</p>
                <p>Cr√©e {{ quiz.createdDate|date('d/m/Y') }}</p>
                <p>{{ quiz.description }}</p>
                <a href="{{ path('app_quiz_view', {'id': quiz.id}) }}" class="rounded-btn">Jouer</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
